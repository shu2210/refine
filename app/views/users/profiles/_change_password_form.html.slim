.change-password-form
  = form_with model: @user, url: users_change_password_path, method: :put, builder: RefineFormBuilder, local: true do |f|
    input[id="userName" name="username" autocomplete="username" value=""]

    .current-password.uk-margin
      = f.label :current_password
      = f.password_field_with_icon :current_password, class: 'uk-input', autocomplete: 'current-password'

    .new-password.uk-margin
      = f.label :new_password
      = f.password_field_with_icon :new_password, class: 'uk-input', autocomplete: 'new-password'

    .new-password-confirmation.uk-margin
      = f.label :new_password_confirmation
      = f.password_field_with_icon :new_password_confirmation, class: 'uk-input', autocomplete: 'new-password'

    .uk-submit.uk-text-center.uk-margin
      = f.submit '保存', class: 'uk-button uk-button-primary'
